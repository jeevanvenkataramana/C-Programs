#include<iostream>

int sorted_search(int *elements, int size, int target)
{
	if(size<=0 || !elements) return -1;

	int left=0, right = size-1;

	while(left<right)
	{
		int middle=(left+right+1)/2;

		if(elements[middle]> target)
		{
			right=middle-1;
		}
		else
		{
			left=middle+1;
		}
	}
}



